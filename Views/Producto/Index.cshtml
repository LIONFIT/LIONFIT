@model IEnumerable<LIONFIT.Models.Producto>

@{
    ViewData["Title"] = "Index";
}
<div class="contenedor-producto">
<h1 class="titulo-producto">PRODUCTO</h1>

<div class="boton-producto">

<a class="minimal-button" asp-action="Create" >  
                    <span>CREAR PRODUCTO</span>
                    <span class="button-icon"></span>
</a>




<hr>


<table class="table table-producto">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DesProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><ion-icon size="small" name="create-outline"></ion-icon></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><ion-icon size="small" name="newspaper-outline"></ion-icon></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><ion-icon size="small" name="trash-outline"></ion-icon></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>