<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LIONFIT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LIONFIT.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap" rel="stylesheet">


</head>


<body>
    <div class="mi_contenedor">



        <div class="mi_container">
            <div class="pantalla-carga">
                <div class="pantalla-carga">
                    <img class="imagen_b" src="https://drive.google.com/uc?id=1pR1ZadN2j-3FoyruYQ8sNyjfGKweLmJW"
                        alt="Cargando...">
                    <div class="circulo-carga"></div>
                </div>
            </div>



            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light   box-shadow mb-3"
                    style="background-color: #E14545;">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img
                                src="https://drive.google.com/uc?id=1pR1ZadN2j-3FoyruYQ8sNyjfGKweLmJW" alt="LIONFIT"
                                style="max-height: 60px;
  width: 50px;"></a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1 text-center">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                        asp-action="Index">Inicio</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Productos"
                                        asp-action="Index">Productos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                        asp-action="Carrito">Carrito</a>
                                </li>
                            </ul>
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </nav>
            </header>


            <div class="back">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <footer class="border-top footer text-muted">
                <div class="container">
                    <div class="social-btns">
                        <a class="btn facebook" href="https://www.facebook.com/people/LionFit-Store/100092302690244/">
                            <i class="fa fa-facebook"></i>
                        </a>
                        <a class="btn twitter" href="https://twitter.com/LionFit2003">
                            <i class="fa fa-twitter"></i>
                        </a>
                        <a class="btn google" href="#">
                            <i class="fa fa-google"></i>
                        </a>
                    </div>
                </div>
            </footer>
        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>