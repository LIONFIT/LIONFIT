<body>
  <div class="indice-IMC-container">
    <h1>BMI Calculator</h1>
    
    <form id="bmi-form" class="indice-IMC-form">
      <label for="weight" class="indice-IMC-label">Peso (kg):</label>
      <input type="number" id="weight" step="0.01" class="indice-IMC-input" required>
      
      <label for="height" class="indice-IMC-label">Altura (m):</label>
      <input type="number" id="height" step="0.01" class="indice-IMC-input" required>
      
      <button type="submit" class="indice-IMC-button">Calcular BMI</button>
    </form>
    
    <div id="result-container" class="indice-IMC-result-container"></div>
  </div>

  <script>
    async function getBMI(weight, height) {
      var bmiRequestOptions = {
        method: 'GET',
        headers: {
          'X-RapidAPI-Key': '2c613b6f23msh5bddd976c184efap1a98d6jsn955592e0f887',
          'X-RapidAPI-Host': 'body-mass-index-bmi-calculator.p.rapidapi.com'
        }
      };
      
      var bmiResponse = await fetch(`https://body-mass-index-bmi-calculator.p.rapidapi.com/metric?weight=${weight}&height=${height}`, bmiRequestOptions);
      var bmiData = await bmiResponse.json();
      
      var categoryRequestOptions = {
        method: 'GET',
        headers: {
          'X-RapidAPI-Key': '2c613b6f23msh5bddd976c184efap1a98d6jsn955592e0f887',
          'X-RapidAPI-Host': 'body-mass-index-bmi-calculator.p.rapidapi.com'
        }
      };
      
      var categoryResponse = await fetch(`https://body-mass-index-bmi-calculator.p.rapidapi.com/weight-category?bmi=${bmiData.bmi}`, categoryRequestOptions);
      var categoryData = await categoryResponse.json();
      
      return {
        bmi: bmiData.bmi,
        category: categoryData.bmi_category
      };
    }
    
    document.getElementById('bmi-form').addEventListener('submit', async function(event) {
      event.preventDefault();
      
      var weight = document.getElementById('weight').value;
      var height = document.getElementById('height').value;
      
      try {
        var result = await getBMI(weight, height);
        
        var resultContainer = document.getElementById('result-container');
        resultContainer.innerHTML = `
          <p class="indice-IMC-result-label">BMI:</p>
          <p>${result.bmi}</p>
          <p class="indice-IMC-result-label">Category:</p>
          <p>${result.category}</p>
        `;
      } catch (error) {
        console.error(error);
        // Manejo de errores
      }
    });
  </script>

</body>
