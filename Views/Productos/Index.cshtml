<div class="container">
@model IEnumerable<LIONFIT.Models.Producto>
@{

ViewData["Title"] = "Productos";

}
<h1>@ViewData["Title"]</h1>
  <div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div class="col-sm-4">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions text-center">
                    <img class="img-responsive" style="width: 250px; height: 250px"
                       src="@item.Imagen" alt="@item.Imagen"  />
                  </div>
                </div>
                <div class="card-body">
                  <h5 class="card-title">@Html.DisplayFor(modelItem => item.NomProducto)</h5>
                  <p class="card-text">S/ @Html.DisplayFor(modelItem => item.Precio)</p>
                  <a class="btn btn-primary" asp-action="Add" asp-route-id="@item.Id">AGREGAR</a>
                  <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">VER</a>
                </div>
              </div>
            </div>
            }
         </div>
        </div>
      </div>
    </div>
  </div>
  