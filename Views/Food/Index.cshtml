@model List<LIONFIT.Models.Alimento>

<style>
    .Title_h1 {
        margin: 20px auto;
        text-align: center;
    }

    .ContainerFood {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        margin: 20px auto;
        width: 90%;
    }

    .ContainerFood_card {
        width: 350px;
        border: solid #FFD65B 2px;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 4px 4px 4px rgba(0, 0, 0, 0.25);
        display: flex;
        flex-direction: column;
        gap: 20px;
        align-items: center;
    }

    .SearchForm {
        text-align: center;
        margin-bottom: 20px;
    }

    .SearchForm input[type="text"] {
        padding: 10px;
        width: 300px;
        border-radius: 5px;
        border: 1px solid #ccc;
        outline: none;
    }

    .SearchForm input[type="submit"] {
        padding: 10px 20px;
        background-color: #FFD65B;
        border: none;
        border-radius: 5px;
        color: white;
        cursor: pointer;
    }
</style>

    <h1 class="Title_h1">ALIMENTOS NUTRITIVOS</h1>

<div class="SearchForm">
    <form method="get" action="@Url.Action("Index")">
        <input type="text" name="search" placeholder="Buscar alimentos">
        <input type="submit" value="Buscar">
    </form>
</div>

<section class="ContainerFood">
    @foreach (var alimentos in Model)
    {
        <div class="ContainerFood_card">
            <h3>@alimentos.Title</h3>
            <img src="@alimentos.Image" alt="Imagen de @alimentos.Title" width="200" height="200" />
        </div>
    }
</section>